{
  "name": "claude-code-agent",
  "version": "0.1.0",
  "description": "Monitoring, visualization, and orchestration for Claude Code sessions",
  "type": "module",
  "main": "dist/main.js",
  "module": "dist/main.js",
  "types": "dist/main.d.ts",
  "bin": {
    "claude-code-agent": "./bin/claude-code-agent"
  },
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.js",
      "default": "./dist/main.js"
    }
  },
  "scripts": {
    "dev": "bun run --watch src/main.ts",
    "build": "bun build src/main.ts --outdir dist --target bun",
    "start": "bun run src/main.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "lint": "bun run typecheck",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "clean": "rm -rf dist",
    "ui:build": "cd src/viewer/browser/static && bun run build",
    "ui:dev": "cd src/viewer/browser/static && bun run dev",
    "test:e2e": "bun run tests/e2e/web-viewer.e2e.ts",
    "test:e2e:build": "bun run ui:build && bun run test:e2e"
  },
  "homepage": "https://github.com/user/repo",
  "repository": {
    "type": "git",
    "url": "https://github.com/user/repo"
  },
  "license": "MIT",
  "trustedDependencies": [],
  "devDependencies": {
    "@types/bun": "1.1.14",
    "@types/minimatch": "6.0.0",
    "@types/mustache": "4.2.6",
    "@types/ws": "8.18.1",
    "@vitest/ui": "2.1.8",
    "prettier": "3.4.2",
    "typescript": "5.7.2",
    "vitest": "2.1.8",
    "ws": "8.19.0"
  },
  "dependencies": {
    "@elysiajs/cors": "1.4.1",
    "@elysiajs/static": "1.4.7",
    "commander": "14.0.2",
    "consola": "3.4.2",
    "elysia": "1.4.20",
    "minimatch": "10.1.1",
    "mitt": "3.0.1",
    "mustache": "4.2.0",
    "nanoid": "5.1.6",
    "neverthrow": "8.2.0",
    "perfect-debounce": "2.0.0",
    "slugify": "1.6.6"
  }
}
